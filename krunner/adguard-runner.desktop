[Desktop Entry]
Name=AdGuard Runner
Comment=Control AdGuard CLI
Exec=~/.local/bin/adguard-runner
Type=Application
Terminal=true
Categories=System;Utility;
Actions=start;stop;status;

[Desktop Action start]
Name=Start AdGuard
Exec=~/.local/bin/adguard-runner start
Terminal=true

[Desktop Action stop]
Name=Stop AdGuard
Exec=~/.local/bin/adguard-runner stop
Terminal=true

[Desktop Action status]
Name=AdGuard Status
Exec=~/.local/bin/adguard-runner status
Terminal=true

